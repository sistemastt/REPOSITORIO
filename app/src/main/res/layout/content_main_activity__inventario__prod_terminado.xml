<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity_Inventario_ProdTerminado"
    tools:showIn="@layout/activity_main__inventario__prod_terminado">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Inventario Compania" />

                <Spinner
                    android:id="@+id/spnCompania"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Inventario Alamcen" />

                <Spinner
                    android:id="@+id/spnAlmacen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ubicacion - [ COLUMNA | FILA | FONDO ]  "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<EditText-->
                <!--android:id="@+id/editPieza"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/fondoedittext"-->
                <!--android:ems="10"-->
                <!--android:gravity="right"-->
                <!--android:inputType="textPhonetic"-->
                <!--android:padding="10dp"-->
                <!--android:textSize="24sp"/>-->
                <EditText
                    android:id="@+id/editColumna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTextBoxUsables"
                    android:ems="10"
                    android:hint="COLUMNA"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="10dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/editFila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTextBoxUsables"
                    android:ems="10"
                    android:hint="FILA"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="10dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/editFondo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorTextBoxUsables"
                    android:ems="10"
                    android:hint="FONDO"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="10dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtRollo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÂ° de Rollo "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/LinearBusquedaEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editRollo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorTextBoxUsables"
                    android:ems="10"
                    android:hint="ROLLO"
                    android:inputType="number"
                    android:maxLength="14"
                    android:padding="10dp"
                    android:textSize="24sp" />


                <ImageButton
                    android:id="@+id/btnBuscar"
                    style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick_btnBuscar"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_menu_search" />

                <ImageButton
                    android:id="@+id/btnScan"
                    style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick_btnScan"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_menu_camera" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/Inventario_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:visibility="gone"
                    tools:visibility="gone"></ProgressBar>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearSeccionUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Articulo" />

                    <EditText
                        android:id="@+id/editCodigoArticulo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"

                        android:editable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="Codigo Articulo"
                        android:inputType="none"
                        android:padding="5dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contador"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editContador"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"

                        android:editable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="0"
                        android:inputType="none"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/editDescripcionArticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:hint="Descripcion de articulo"
                android:inputType="none"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/LinearSecciondos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editCodigoColor"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:editable="false"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Codigo"
                            android:inputType="none"
                            android:padding="5dp" />

                        <EditText
                            android:id="@+id/editDescripcionColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Descripcion de color"
                            android:inputType="none"
                            android:padding="5dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearSeccionTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combinacion" />

                    <EditText
                        android:id="@+id/editCombinacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="0"
                        android:inputType="none"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuadro" />

                    <EditText
                        android:id="@+id/editCuadro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="0"
                        android:inputType="none"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calidad" />

                    <EditText
                        android:id="@+id/editCalidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="0"
                        android:inputType="none"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metraje" />

                    <EditText
                        android:id="@+id/editMetraje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="right"
                        android:hint="0"
                        android:inputType="none"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:onClick="onClick_btnGuardar"
                    android:text="Guardar" />

                <Button
                    android:id="@+id/btnNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick_btnNuevo"
                    android:text="Nuevo" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>