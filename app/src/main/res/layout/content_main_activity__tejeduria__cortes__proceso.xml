<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity_Tejeduria_Cortes_Proceso"
    tools:showIn="@layout/activity_main__tejeduria__cortes__proceso">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Compañia" />

                <Spinner
                    android:id="@+id/spnCompania"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Fecha" />

                <EditText
                    android:id="@+id/txtFecha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorTextBoxUsables"
                    android:ems="10"
                    android:inputType="date"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblNroOrden"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Orden" />

                <Spinner
                    android:id="@+id/spnOrden"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/BtnBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:text="Buscar " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Salir"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nuevo "
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Modifica"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnAnular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Anular"
                    android:textSize="13sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/TableLayout02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:id="@+id/TableRow02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColUrdido"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="N° Urdido"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColFraccion"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Fracc."
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColSecuencia"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Sec."
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColPlegador"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Plegador"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColTelar"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Telar"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColMetros"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Metros"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColFecha"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Fecha"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColHora"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Hora"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColTurno"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Turno"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColCodTra"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="C.Trab."
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColNomTra"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="N. Trabajador"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColObservacion"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Observacion"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColArticuloBase"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Articulo Base"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColCodCrudo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Cod. Crudo"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ColDesArticulo"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="Articulo"
                                android:textColor="@android:color/background_light"
                                android:textStyle="bold" />


                        </TableRow>

                    </TableLayout>

                    <GridView
                        android:id="@+id/grilladetalle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:clipChildren="true"
                        android:horizontalSpacing="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="5dp" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>